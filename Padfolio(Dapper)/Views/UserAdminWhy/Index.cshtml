@model  IEnumerable<Padfolio_Dapper_.Models.WhyPadfolios>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}

<!-- ======= About Us Section ======= -->
<section id="about-us" class="about-us padd-section">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">

            <div class="col-md-5 col-lg-3">
                <br /><br /><br />
                <img src="~/UserTemplate/assets/img/why.jpg" alt="Why Padfolio?" data-aos="zoom-in" data-aos-delay="100">
                <br /><br /><br /><br /><br />
                <img src="~/UserTemplate/assets/img/why2.jpg" alt="Why Padfolio?" data-aos="zoom-in" data-aos-delay="100">
            </div>

            <div class="col-md-7 col-lg-5">
                <div class="about-content" data-aos="fade-left" data-aos-delay="100">

                    <h2><span>Padfolio</span></h2>
                    @foreach (var item in Model) {
                       <h5><p><b> <i class="bi bi-balloon-heart-fill"> &nbsp @Html.DisplayFor(modelItem => item.WhyTitle)</i></b></p></h5>
                        <p>@Html.DisplayFor(modelItem => item.WhyExplanation)</p>
                     }

                    <ul class="list-unstyled">
                        <li><i class="vi bi-chevron-right"></i>Write notes </li>
                        <li><i class="vi bi-chevron-right"></i>Write to-do lists</li>
                        <li><i class="vi bi-chevron-right"></i>Save text</li>
                        <li><i class="vi bi-chevron-right"></i>Add notes & photos from your phone</li>
                    </ul>

                </div>
            </div>

        </div>
    </div>
</section><!-- End About Us Section -->
