@model IEnumerable<Padfolio_Dapper_.Models.Plans>
@{
    ViewBag.Title = "PDelete";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Blogs</h5>
        <!-- Table Variants -->
        <button type="button" class="btn btn-success"><p>@Html.ActionLink("Create New", "PAddUpdate")</p></button>
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.PlanId)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.PlanTitle)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.PPrice)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.PExplanation)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-info">
                        <th scope="row"> @Html.DisplayFor(modelItem => item.PlanId)</th>
                        <td>@Html.DisplayFor(modelItem => item.PlanTitle)</td>
                        <td>@Html.DisplayFor(modelItem => item.PPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.PExplanation)</td>
                        <td>
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
            <div class="text-center">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </table>
        <!-- End Table Variants -->

    </div>
</div>


