@model Padfolio_Dapper_.Models.Todolists
@{
    ViewBag.Title = "TAddUpdate";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TodolistId);


    <!-- ======= Contact Section ======= -->
    <section id="contact" class="padd-section">

        <div class="container" data-aos="fade-up">
            <div class="section-title text-center">
                <h2>Notes</h2>

            </div>

            <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="100">

                <div class="col-lg-5 col-md-8">
                    <div class="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form action="" method="post" role="form" class="php-email-form">
                            <div class="form-group mt-3">
                                <i class="bi bi-emoji-heart-eyes-fill"></i>
                                @Html.LabelFor(model => model.TodolistTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                <br /><br />
                                @Html.EditorFor(model => model.TodolistTitle, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TodolistTitle, "", new { @class = "text-danger" })
                            </div>
                            <br />
                            <div class="form-group mt-3">
                                <i class="bi bi-emoji-heart-eyes-fill"></i>
                                @Html.LabelFor(model => model.TodolistExplanation, htmlAttributes: new { @class = "control-label col-md-2" })
                                <br /><br />
                                @Html.EditorFor(model => model.TodolistExplanation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TodolistExplanation, "", new { @class = "text-danger" })
                            </div>
                            <div class="my-3">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Your message has been sent. Thank you!</div>
                            </div>
                            <div class="text-center">
                                <br /><br />
                                <input type="submit" value="Edit" class="btn btn-primary" />
                                <input type="submit" value="Add" class="btn btn-primary" />
                                <br /><br />
                                <div class="text-center">
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Contact Section -->
}
