@model  IEnumerable<Padfolio_Dapper_.Models.Plans>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}

<!-- ======= Pricing Section ======= -->
<section id="pricing" class="padd-section text-cente">

    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">

            <h2>Meet With Our Price</h2>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">

            <div class="col-md-6 col-lg-3">
                @foreach (var item in Model)
                {
                        <div class="block-pricing">
                            <div class="pricing-table">
                                <h4>@Html.DisplayFor(modelItem => item.PlanTitle)</h4>
                                <h2>@Html.DisplayFor(modelItem => item.PPrice)</h2>
                                <ul class="list-unstyled">
                                    <li>@Html.DisplayFor(modelItem => item.PExplanation)</li>
                                </ul>
                                <div class="table_btn">
                                    <i class="bi bi-cart">You Can Buy</i>
                                </div>
                            </div>
                        </div>
                        }
                </div>
        </div>
    </div>
</section><!-- End Pricing Section -->
