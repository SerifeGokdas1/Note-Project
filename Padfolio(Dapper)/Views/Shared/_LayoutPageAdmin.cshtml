                        <span>Web Developer</span>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" @Html.ActionLink("My Profile", "Index", "AdminInformation")
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" @Html.ActionLink("Account Setting", "Index", "AdminInformation")                            
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" @Html.ActionLink("Sign Out", "Index", "Home")
                        </a>
                    </li>

                </ul><!-- End Profile Dropdown Items -->
            </li><!-- End Profile Nav -->
            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link ">
                    <i class="bi bi-grid"></i>
                    <span></span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
               
                <a class="nav-link collapsed" @Html.ActionLink("Why Padfolio?", "Index", "AdminWhy") 
                    
                </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" @Html.ActionLink("Plans", "Index", "AdminPlan")
                    </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Blogs</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>@Html.ActionLink("Blogs", "Index", "AdminBlog")</li>
                    <li>@Html.ActionLink("Blog Edit", "Index", "AdminBlog")</li>
                    <li>@Html.ActionLink("Blog Delete", "Index", "AdminBlog")</li>
                </ul>
            </li><!-- End Blogs Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" @Html.ActionLink("User Informations", "Index", "AdminUserInformation")
                    </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" @Html.ActionLink("User Notes", "Index", "AdminUserNotes")
                    </a>
            </li><!-- End Register Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" @Html.ActionLink("User To-Do List", "Index", "AdminUserTodolist")
                    </a>
            </li><!-- End Register Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" @Html.ActionLink("Admin Informations", "Index", "AdminInformation")
                    </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-heading">Pages</li>


            <li class="nav-item">
                <a class="nav-link collapsed" @Html.ActionLink("Login", "Login", "AdminLogin")
                    </a>
            </li><!-- End Login Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" @Html.ActionLink("Logout", "Index", "Home")
                    </a>
            </li><!-- End Logout Page Nav -->

        </ul>

    </aside><!-- End Sidebar-->
    <main id="main" class="main">


        <section class="section dashboard">
            <div class="row">
                <div>
                    @RenderBody()
                </div>
            </div>
        </section>

    </main><!-- End #main -->
