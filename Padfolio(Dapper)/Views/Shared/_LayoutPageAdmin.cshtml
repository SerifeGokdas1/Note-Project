    </footer><!-- End Footer -->

    <a href="~/Admin Template/" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <i class="bi bi-arrow-up-short"></i>

    <!-- Vendor JS Files -->
    <script src="~/Admin Template/assets/vendor/apexcharts/apexcharts.min.js"></script>
