<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="~/Views/Admin/Index.cshtml" class="logo d-flex align-items-center">
                <img src="~/Admin Template/assets/img/padfoliologo.png" alt="">

                <span class="d-none d-lg-block">Padfolio</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>
        <!-- End Logo

    <div class="search-bar">
        <form class="search-form d-flex align-items-center" method="POST" action="#">
            <input type="text" name="query" placeholder="Search" title="Enter search keyword">
            <button type="submit" title="Search"><i class="bi bi-search"></i></button>
        </form>
    </div><!-- End Search Bar

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">

            <li class="nav-item d-block d-lg-none">
                <a class="nav-link nav-icon search-bar-toggle " href="~/Admin Template/">
                    <i class="bi bi-search"></i>
                </a>
            </li><!-- End Search Icon-->
        <!-- End Messages Nav -->
        <nav class="header-nav ms-auto">

            <li class="nav-item dropdown pe-3">

                <a class="nav-link nav-profile d-flex align-items-center pe-0"  data-bs-toggle="dropdown">
                    <img src="~/Admin Template/assets/img/serife.jpg" alt="Profile" class="rounded-circle">
                    <span class="d-none d-md-block dropdown-toggle ps-2">Şerife Gökdaş</span>
                </a><!-- End Profile Iamge Icon -->

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile" style=" text-align: right;">
                    <li class="dropdown-header">
